import java.awt.Font;
import java.awt.event.*;
import javax.swing.*;

public class welcomepage {

    public static void main(String[] args) {
        LaunchPage launchPage = new LaunchPage();
    }

    static class LaunchPage implements ActionListener {
        JFrame frame = new JFrame();
        JButton myButton = new JButton("Start");
        JLabel label;

        LaunchPage() {
            try {
               ImageIcon image = new ImageIcon("welcome.png");
                image.setImage(image.getImage().getScaledInstance(300, 300, java.awt.Image.SCALE_SMOOTH));
                label = new JLabel(image);
                // Set label position and size
                label.setBounds(60, 20, 270, 215);
            } catch (Exception e) {
                System.err.println("Error loading image: " + e.getMessage());
            }

            myButton.setBounds(125, 280, 150, 40);
            myButton.setFocusable(false);
            myButton.addActionListener(this);

            // Add components to frame
            frame.add(myButton);
            frame.add(label);

            frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
            frame.setLayout(null);
            frame.setSize(500, 500); // Set frame size
            frame.setVisible(true);
            frame.setLocationRelativeTo(null); // Center frame on screen
            frame.setResizable(false);
        }

        @Override
        public void actionPerformed(ActionEvent e) {
            if (e.getSource() == myButton) {
                frame.dispose();
                Main main = new Main();
            }
        }
    }
}
